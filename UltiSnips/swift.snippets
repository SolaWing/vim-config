
priority 0

snippet /** "doc one line comment" b
/** $1 */
endsnippet

snippet /* "doc comment" b
/** $1
 *
 * $2
 */
endsnippet

snippet fixme "fixme" b
// FIXME: 
endsnippet

snippet todo "todo" b
// TODO: 
endsnippet

snippet v "var declare"
var ${1:name} = ${2:nil}
endsnippet

snippet l "let declare"
let ${1:name} = ${2:$1}
endsnippet

snippet f "func def"
func ${1:name}($2)${3/ .*/ ->/}${3} {
	$0
}
endsnippet

snippet cl "closure define"
{ ($1)${2/.+/ -> /}${2:Void} in 
	$0
}
endsnippet

snippet cast "unsafe bit cast"
unsafeBitCast(${VISUAL}$0, to: ${1:UnsafeRawPointer}.self)
endsnippet

snippet t "type of"
type(of: ${VISUAL}$0)
endsnippet

snippet wh "while" b
