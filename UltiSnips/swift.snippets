snippet swiftlint "swiftlint toggle rule" b
// swiftlint:disable ${1:all}
${VISUAL}
// swiftlint:enable $1
endsnippet

snippet swiftlint_this "swiftlint disable current line"
// swiftlint:disable:this all
endsnippet
snippet swiftlint_next "swiftlint disable next line"
// swiftlint:disable:next all
endsnippet

snippet unimplemented "assert unimplemented"
assertionFailure("${1:unimplemented code!!}")
endsnippet
snippet unreachable "assert unreachable"
assertionFailure("${1:unreachable code!!}")
endsnippet
snippet assertMain "assert main thread" b
assert(Thread.isMainThread, "${0:should occur on main thread!}")
endsnippet

snippet deprecated "deprecated declare" b
@available(*, deprecated${2:, message: "${1:No longer supported.}"})
endsnippet

########## Swift UI ##########
snippet view "a swif ui view declare" b
struct $1: View {
	var body: some View {
		${0:Text("Replace Me")}
	}
}
endsnippet

snippet preview "a swift ui preview declare" b
struct `!v expand("%:t:r")`_Previews: PreviewProvider {
	static var previews: some View {
		`!v expand("%:t:r")`($0)
	}
}
endsnippet

########## Combine ##########
snippet publisher "create a new publisher" b
struct $1: Publisher {
	typealias Output = $2
	typealias Failure = $3
	func receive<S>(subscriber: S) where S : Subscriber, Failure == S.Failure, Output == S.Input {
		$0
	}
}
endsnippet
