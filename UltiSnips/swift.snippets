	$0
}
endsnippet

snippet dowhile "do while syntax" b
repeat {
	$0
} while ${1:false}
endsnippet

snippet for "for in" b
for ${3:i} in ${1:0..<${2:10}} {
	$0
}
endsnippet

snippet do "do catch block" b
do {
	$0
} catch {

}
endsnippet

snippet guard "guard statement" b
guard ${1:let ${2:self} = ${3:$2}} else { return$0 }
endsnippet

snippet mark "xcode mark" b
