{
    // ruby
    "solargraph.commandPath": "/Users/wang/.vim/bundle/YouCompleteMe/third_party/ycmd/third_party/solargraph/main.rb",
    "solargraph.checkGemVersion": false,
    "solargraph.folding": true,
    "solargraph.hover": true,
    "solargraph.diagnostics": true,
    "solargraph.formatting": true,
    "solargraph.symbols": true,

    "solargraph.transport": "stdio", // needed for have debug info
    "solargraph.logLevel": "debug",
    "solargraph.trace.server": "verbose",

    // rust
    // "rust-analyzer.serverPath": "~/Downloads/rust-analyzer-mac",

    // python
    "python.formatting.provider": "black",

    // swift
    // "sourcekit.commandPath": "~/Documents/github/Apple/sourcekit-lsp/.build/x86_64-apple-macosx/release/sourcekit-lsp",
    "languageserver": {
        "sourcekit-lsp": {
            // "command": "/Users/wang/Documents/github/Apple/sourcekit-lsp/.build/release/sourcekit-lsp",
            // "command": "sourcekit-lsp",
            "command": "xcrun",
            "args": ["--toolchain", "swift", "sourcekit-lsp"],
            "trace.server": "verbose",
            "options": {
                "env": {
                    "SOURCEKIT_LOGGING": "3"
                }
            },
            "filetypes": ["swift"]
        }
    },

    // config
    "suggest.maxCompleteItemCount": 9,
    "suggest.numberSelect": false,
    "codeLens.enable": true,
    "diagnostic.virtualText": true,

    // mapping
    "list.insertMappings": {
        "<C-g>": "do:exit",
        "<A-j>": "normal:j",
        "<A-k>": "normal:k"
    },
    "list.normalMappings": {
        "<C-g>": "do:exit",
        "<A-j>": "normal:j",
        "<A-k>": "normal:k",
        "<A-a>": "do:selectall"
    }
}
